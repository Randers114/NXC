            case [1, 0, 1, 1, 1, 0, 0, 1, 0]: // Omvendt Z form mod venstre med en i modsatte hjørne af det isolerede ikke-gule hjørne
                if (lastLayerConfigurationArray == [0, 0, 0, 1, 1, 0, 0, 1, 0, 0, 0, 1])
                {
                    
                    configurationFound = TRUE;
