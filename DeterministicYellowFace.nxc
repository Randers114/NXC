                break;


            case [1, 0, 0, 1, 1, 0, 0, 1, 0]: // Omvendt Z form mod venstre
                if (lastLayerConfigurationArray == [1, 0, 0, 1, 1, 0, 1, 1, 0, 0, 0, 0])
                {
                    
