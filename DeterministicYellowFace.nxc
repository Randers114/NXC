            case [1, 0, 1, 0, 1, 1, 0, 1, 0]: // Z form mod højre med en i modsatte hjørne af det isolerede ikke-gule hjørne
                if (lastLayerConfigurationArray == [0, 0, 0, 1, 0, 0, 0, 1, 0, 0, 1, 1])
