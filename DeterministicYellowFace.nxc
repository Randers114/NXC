            // Liggende T-form
            case [0, 0, 1, 1, 1, 1, 0, 0, 1]: // C form mod venstre
                if (lastLayerConfigurationArray == [0, 1, 0, 0, 0, 0, 0, 1, 0, 1, 0, 1])
